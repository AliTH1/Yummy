@using Yummy.Models;
@model ICollection<Category>



<section id="menu" class="menu">
    <div class="container" data-aos="fade-up">

        <div class="section-header">
            <h2>Our Menu</h2>
            <p>Check Our <span>Yummy Menu</span></p>
        </div>

        <ul class="nav nav-tabs d-flex justify-content-center" data-aos="fade-up" data-aos-delay="200">
            @foreach (Category category1 in Model)
            {
                <li class="nav-item">
                    <a class="nav-link @(category1.IsActive?"active":"") show" data-bs-toggle="tab" data-bs-target="#menu-@category1.Name.ToLower().Trim()">
                        <h4>@category1.Name</h4>
                    </a>
                </li>
            }
        </ul>

        <div class="tab-content" data-aos="fade-up" data-aos-delay="300">
            @foreach (Category category in Model)
            {
                <div class="tab-pane fade @(category.IsActive?"active":"") show" id="menu-@category.Name.ToLower().Trim()">

                    <div class="tab-header text-center">
                        <p>Menu</p>
                        <h3>@category.Name</h3>
                    </div>

                    <div class="row gy-5">
                        @foreach (Product product in category.Products)
                        {
                            <div class="col-lg-4 menu-item">
                                <a href="assets/img/menu/@product.ImagePath" class="glightbox"><img src="assets/img/menu/@product.ImagePath" class="menu-img img-fluid" alt=""></a>
                                <h4>@product.Name</h4>
                                <p class="ingredients">
                                    @product.Ingredients
                                </p>
                                <p class="price">
                                    @product.Price
                                </p>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</section>
